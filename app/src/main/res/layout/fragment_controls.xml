<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.agrovamp.agrovamp.ControlsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:text="@string/control_the_motor_and_pump_of_your_farm_here" />

    <Switch
        android:id="@+id/motor_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/motor"
        android:checked="true"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        />

    <Switch
        android:id="@+id/pump_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/pump"
        android:checked="true"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        />
</LinearLayout>
